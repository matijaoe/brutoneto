{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": [
      "ESNext"
    ],
    "moduleDetection": "force",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [
      "@types/bun" // add Bun global
    ],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": true,
    "downlevelIteration": true,
    "noEmit": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ]
}
